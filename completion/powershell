# Copyright (c) 2014 Jason Jarrett
#
# Tab completion for the `justrun`
#
# Usage:
#
# To enable powershell <tab> completion for justrun you need to be running
# at least PowerShell v3 or greater and add the below to your $PROFILE
#
#     Invoke-Expression ((justrun --completion=powershell) -join [System.Environment]::NewLine)
#
#

$justrun_completion_Process = {
    param($commandName, $parameterName, $wordToComplete, $commandAst, $fakeBoundParameter)


	# Load up an assembly to read the justrunfile's sha1
	if(-not $global:JustrunSHA1Managed) {
		[Reflection.Assembly]::LoadWithPartialName("System.Security") | out-null
		$global:JustrunSHA1Managed = new-Object System.Security.Cryptography.SHA1Managed
	}

	# setup a global (in-memory) cache
	if(-not $global:JustrunfileShaCache) {
		$global:JustrunfileShaCache = @{};
	}

	$cache = $global:JustrunfileShaCache;

	# Get the justrunfile's sha1
	$sha1justrunFile = (resolve-path justrunfile.js -ErrorAction Ignore | %{
		$file = [System.IO.File]::Open($_.Path, "open", "read")
		[string]::join('', ($global:JustrunSHA1Managed.ComputeHash($file) | %{ $_.ToString("x2") }))
		$file.Dispose()
	})

	# lookup the sha1 for previously cached task lists.
	if($cache.ContainsKey($sha1justrunFile)){
		$tasks = $cache[$sha1justrunFile];
	} else {
		$tasks = (justrun --tasks-simple).split("`n");
		$cache[$sha1justrunFile] = $tasks;
	}


    $tasks |
        where { $_.startswith($commandName) }
        Sort-Object |
        foreach { New-Object System.Management.Automation.CompletionResult $_, $_, 'ParameterValue', ('{0}' -f $_) }
}

if (-not $global:options) {
    $global:options = @{
        CustomArgumentCompleters = @{};
        NativeArgumentCompleters = @{}
    }
}

$global:options['NativeArgumentCompleters']['justrun'] = $justrun_completion_Process
$function:tabexpansion2 = $function:tabexpansion2 -replace 'End\r\n{','End { if ($null -ne $options) { $options += $global:options} else {$options = $global:options}'
