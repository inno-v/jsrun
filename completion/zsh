# Usage:
#
# To enable zsh <tab> completion for justrun, add the following line (minus the
# leading #, which is the zsh comment character) to your ~/.zshrc file:
#
# eval "$(justrun --completion=zsh)"

# Enable zsh autocompletion.
function _justrun_completion() {
  # Grab tasks
  compls=$(justrun --tasks-simple)
  completions=(${=compls})
  compadd -- $completions
}

compdef _justrun_completion justrun
